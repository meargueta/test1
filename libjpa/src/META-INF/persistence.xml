<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="libjpa">
	<class>com.libreria.model.Autor</class>
	<class>com.libreria.model.Categoria</class>
	<class>com.libreria.model.Libro</class>	
	<properties>
         
            
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
          
            
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="servidorbd2021"/>
<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/libreria?zeroDateTimeBehavior=convertToNull" />
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="false"/>

            <property name="connection.release_mode" value="auto"/>
  
       <!-- Important--> 
        <property name="hibernate.connection.provider_class"
          value="org.hibernate.connection.C3P0ConnectionProvider" />

        <property name="hibernate.c3p0.max_size" value="100" />
        <property name="hibernate.c3p0.min_size" value="1" />
        <!-- property name="hibernate.c3p0.acquire_increment" value="5" /-->
        <property name="hibernate.c3p0.idle_test_period" value="100" />
        <property name="hibernate.c3p0.timeout" value="100" />
        
         
        

 
  
</properties>
	</persistence-unit>
</persistence>
